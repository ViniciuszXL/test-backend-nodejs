{
    "name": "catalog-rest-api",
    "version": "0.0.2",
    "description": "RESTAPI para gerenciamento de catálogo de produtos",
    "main": "main.ts",
    "scripts": {
        "start": "npm install -y; tsc; node dist/main.js",
        "start-cluster": "npm install -y; tsc; pm2 start dist/main.js -i 0",
        "start-nodemon": "npm install -y; tsc; nodemon dist/main.js",
        "build": "tsc",
        "build-watcih": "tsc -w",
        "test": "jest --verbose --runInBand"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ViniciuszXL/test-backend-nodejs.git"
    },
    "author": "Marcus Vinícius",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ViniciuszXL/test-backend-nodejs/issues"
    },
    "homepage": "https://github.com/ViniciuszXL/test-backend-nodejs#readme",
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "dependencies": {
        "dotenv": "^14.3.0",
        "mongoose": "^6.1.8",
        "redis": "^3.1.2",
        "restify": "^8.6.0",
        "restify-cors-middleware": "^1.1.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.11",
        "babel-jest": "^27.4.6",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "jest": "^27.4.7",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    }
}
